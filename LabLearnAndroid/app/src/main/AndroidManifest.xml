            android:theme="@style/Theme.LabLearnAndroid" />
        <activity
            android:name=".ui.architecture.mvi.MviCounterActivity"
            android:exported="true"
            android:label="MVI Counter"
            android:theme="@style/Theme.LabLearnAndroid" />
        <activity
            android:name=".RPGCardActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.LabLearnAndroid">
        </activity>
    </application>

</manifest>